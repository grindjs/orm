{
  "name": "grind-orm",
  "version": "0.8.0-beta.2",
  "description": "ORM provider for Grind, powered by Objection.js",
  "author": "Shaun Harrison (@shnhrrsn)",
  "license": "MIT",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/grindjs/orm.git"
  },
  "keywords": [
    "grindjs",
    "grind-framework",
    "objectionjs",
    "orm"
  ],
  "dependencies": {
    "as-type": "^1.0.0",
    "objection": "^1.0.0"
  },
  "peerDependencies": {
    "grind-db": "^0.8.0-beta.1",
    "grind-framework": "^0.8.0-beta.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/register": "^7.0.0",
    "ava": "^1.0.0-rc.1",
    "babel-eslint": "^10.0.1",
    "babel-preset-grind": "^0.8.0-beta.3",
    "eslint": "^5.8.0",
    "eslint-config-grind": "^2.1.5",
    "eslint-plugin-import-auto-name": "^1.1.0",
    "grind-cli": "^0.8.0-beta.1",
    "grind-db": "^0.8.0-beta.1",
    "grind-framework": "^0.8.0-beta.1",
    "sqlite": "^2.8.0"
  },
  "engines": {
    "node": ">=8.7"
  },
  "scripts": {
    "lint": "eslint src test",
    "prepare": "bin/build",
    "test": "bin/ava --verbose"
  },
  "grind": {
    "command": "lib/MakeModelCommand.js"
  },
  "ava": {
    "require": [
      "@babel/register"
    ]
  },
  "babel": {
    "presets": [
      [
        "grind",
        {
          "import-auto-name": {
            "autoresolve": true
          }
        }
      ]
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "plugins": [
      "import-auto-name"
    ],
    "env": {
      "node": true
    },
    "extends": "grind",
    "parserOptions": {
      "sourceType": "module"
    },
    "globals": {
      "ValidationError": false
    }
  }
}
